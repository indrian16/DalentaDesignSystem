<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/Theme.DalentaDesignSystem.NoActionBar"
    android:id="@+id/parent_view">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="0dp"
        app:boxBackgroundColor="@color/grey_5"
        app:startIconDrawable="@drawable/ic_search"
        app:startIconTint="@color/grey_3"
        app:endIconDrawable="@drawable/ic_close"
        app:endIconTint="@color/grey_3"
        app:endIconMode="clear_text"
        app:suffixTextAppearance="@style/TextAppearance.DalentaDesignSystem.Body1"
        app:suffixTextColor="@color/grey_3"
        app:expandedHintEnabled="false"
        app:boxStrokeColor="@color/dalenta_outlined_stroke_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:inputType="text"
            android:hint="Placeholder"
            android:textColor="@color/dark"
            android:textAppearance="@style/TextAppearance.DalentaDesignSystem.Body1"/>

    </com.google.android.material.textfield.TextInputLayout>

</FrameLayout>