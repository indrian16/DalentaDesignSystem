<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/parent_view"
    android:theme="@style/Theme.DalentaDesignSystem.NoActionBar">

    <TextView
        android:id="@+id/tv_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:text="Text Field Label"
        android:textAppearance="@style/TextAppearance.DalentaDesignSystem.Body2"
        android:textStyle="bold"
        android:textColor="@color/grey_2" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="false"
        app:boxCornerRadiusBottomEnd="10dp"
        app:boxCornerRadiusBottomStart="10dp"
        app:boxCornerRadiusTopEnd="10dp"
        app:boxCornerRadiusTopStart="10dp"
        app:boxStrokeWidth="1dp"
        app:boxStrokeWidthFocused="0dp"
        app:boxBackgroundColor="@color/grey_5"
        app:endIconDrawable="@drawable/ic_right_arrow"
        app:endIconMode="custom"
        app:endIconTint="@color/blue_3"
        app:boxStrokeColor="@color/dalenta_outlined_stroke_color">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/text_input_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="18dp"
            android:focusable="false"
            android:cursorVisible="false"
            android:inputType="text"
            android:text="Select choices"
            android:textColor="@color/blue_3"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.DalentaDesignSystem.Body1"/>

    </com.google.android.material.textfield.TextInputLayout>

    <tech.dalenta.component.TextCaption
        android:id="@+id/tv_caption"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:caption_state="none"
        />

</LinearLayout>