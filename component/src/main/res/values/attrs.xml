<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="color_state" format="flags">
        <flag name="primary" value="0"/>
        <flag name="gray" value="1"/>
        <flag name="green" value="2"/>
        <flag name="red" value="3"/>
    </attr>

    <attr name="caption_state" format="flags">
        <flag name="none" value="-1"/>
        <flag name="neutral" value="0"/>
        <flag name="warning" value="1"/>
        <flag name="success" value="2"/>
        <flag name="error" value="3"/>
    </attr>

    <attr name="textCaption" format="string"/>

    <declare-styleable name="Button">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
    </declare-styleable>

    <declare-styleable name="SmallButtonPrimary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="icon"/>
        <attr name="iconGravity"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="SmallButtonSecondary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="icon"/>
        <attr name="iconGravity"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="SmallButtonOutlined">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="icon"/>
        <attr name="iconGravity"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="IconSmallButtonPrimary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="icon"/>
        <attr name="iconSize"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="IconSmallButtonSecondary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="icon"/>
        <attr name="iconSize"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="IconSmallButtonOutlined">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="icon"/>
        <attr name="iconSize"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="LargeButtonPrimary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="icon"/>
        <attr name="iconGravity"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="LargeButtonSecondary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="icon"/>
        <attr name="iconGravity"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="LargeButtonOutlined">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="icon"/>
        <attr name="iconGravity"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="IconLargeButtonPrimary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="icon"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="IconLargeButtonSecondary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="icon"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="IconLargeButtonOutlined">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="icon"/>
        <attr name="color_state"/>
    </declare-styleable>

    <declare-styleable name="TextInput">
        <attr name="textLabel" format="string"/>
        <attr name="textLabelSize" format="dimension"/>
        <attr name="textCaption"/>
        <attr name="caption_state"/>

        <attr name="endIconDrawable"/>
        <attr name="endIconMode"/>
        <attr name="suffixText"/>

        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="android:hint"/>
        <attr name="android:inputType"/>
    </declare-styleable>

    <declare-styleable name="SelectField">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:textSize"/>
        <attr name="defaultValue" format="string"/>
        <attr name="selectValue" format="string"/>

        <attr name="textCaption"/>
        <attr name="caption_state"/>

        <attr name="endIconDrawable"/>
    </declare-styleable>

    <declare-styleable name="TextCaption">
        <attr name="caption_state"/>
    </declare-styleable>

    <declare-styleable name="SearchBar">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="android:hint"/>
        <attr name="android:inputType"/>
    </declare-styleable>

</resources>