<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="Button">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
    </declare-styleable>

    <declare-styleable name="SmallButtonPrimary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="icon"/>
        <attr name="iconGravity"/>
    </declare-styleable>

    <declare-styleable name="SmallButtonSecondary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="icon"/>
        <attr name="iconGravity"/>
    </declare-styleable>

    <declare-styleable name="SmallButtonOutlined">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="icon"/>
        <attr name="iconGravity"/>
    </declare-styleable>

    <declare-styleable name="LargeButtonPrimary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
    </declare-styleable>

    <declare-styleable name="LargeButtonSecondary">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
    </declare-styleable>

    <declare-styleable name="LargeButtonOutlined">
        <attr name="android:layout_width"/>
        <attr name="android:layout_height"/>
        <attr name="android:text"/>
        <attr name="android:textSize"/>
    </declare-styleable>

    <declare-styleable name="TextField">
        <attr name="textLabel" format="string"/>
        <attr name="textLabelSize" format="dimension"/>

        <attr name="android:text"/>
        <attr name="android:textSize"/>
        <attr name="android:hint"/>
        <attr name="android:inputType"/>
    </declare-styleable>

</resources>