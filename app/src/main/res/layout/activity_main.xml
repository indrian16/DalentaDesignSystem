<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:layout_margin="16dp">

    <tech.dalenta.component.SmallButtonPrimary
        android:id="@+id/btn_small_primary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Primary"/>

    <tech.dalenta.component.SmallButtonSecondary
        android:id="@+id/btn_small_secondary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Secondary"/>

    <tech.dalenta.component.SmallButtonOutlined
        android:id="@+id/btn_small_outlined"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Small Outlined"/>

</LinearLayout>